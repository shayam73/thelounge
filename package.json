{
  "name": "thelounge",
  "description": "The self-hosted Web IRC client",
  "version": "4.4.3",
  "preferGlobal": true,
  "bin": {
    "thelounge": "index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thelounge/thelounge"
  },
  "homepage": "https://thelounge.chat/",
  "scripts": {
    "build": "npm install --legacy-peer-deps",
    "start": "node index.js",
    "dev": "cross-env NODE_ENV=development node index.js"
  },
  "engines": {
    "node": ">=18.x",
    "yarn": ">=1.22.x"
  },
  "keywords": [
    "irc",
    "chat",
    "thelounge",
    "self-hosted",
    "web-client"
  ]
}
