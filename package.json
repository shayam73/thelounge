{
  "name": "thelounge",
  "version": "4.4.3",
  "description": "The self-hosted web IRC client",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build:client": "webpack --mode production",
    "build:server": "npm install --legacy-peer-deps",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "prestart": "npm run build",
    "start": "node index.js start --host 0.0.0.0",
    "dev": "cross-env NODE_ENV=development node index.js",
    "lint": "eslint . --ext .js,.ts",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=18.x",
    "npm": ">=8.x"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thelounge/thelounge.git"
  },
  "keywords": [
    "thelounge",
    "irc",
    "web",
    "chat",
    "render"
  ],
  "author": "The Lounge Community",
  "license": "MIT"
}
