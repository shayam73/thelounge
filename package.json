{
  "name": "thelounge",
  "version": "4.4.3",
  "description": "Self-hosted web IRC client",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node index.js --host 0.0.0.0",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "webpack --mode production || echo 'Skipping client build'",
    "clean": "rm -rf dist",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "express": "^4.19.0",
    "mime": "^3.0.0",
    "socket.io": "^4.7.5",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.6.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "fork-ts-checker-webpack-plugin": "^9.0.2"
  },
  "license": "MIT"
}
