{
  "name": "thelounge",
  "version": "4.4.3",
  "description": "Self-hosted web IRC client",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "webpack --mode production || true",
    "build": "npm run clean && npm run build:server && npm run build:client",
    "prestart": "npm run build",
    "start": "node index.js start --host 0.0.0.0"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "ajv": "6.12.6",
    "ajv-keywords": "3.5.2",
    "copy-webpack-plugin": "11.0.0",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "fork-ts-checker-webpack-plugin": "6.5.3",
    "mini-css-extract-plugin": "2.4.7",
    "vue-loader": "17.4.2",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "devDependencies": {
    "eslint": "8.57.0",
    "prettier": "3.3.3",
    "typescript": "5.3.3",
    "ts-node": "10.9.2",
    "@types/node": "18.19.3",
    "ts-loader": "9.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thelounge/thelounge.git"
  },
  "license": "MIT"
}
